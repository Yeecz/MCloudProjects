<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/cloud_sliding"
    android:layout_width="280dp"
    android:layout_height="match_parent"
    android:layout_gravity="start"
    android:background="#ffffff"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:id="@+id/L6">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp">

            <com.example.yee.mcloudprojects.CircleImageView
                android:id="@+id/mcloud_tx"
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="20dp"
                android:adjustViewBounds="false"
                />

            <TextView
                android:id="@+id/mcloud_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="45dp"
                android:layout_toRightOf="@id/mcloud_tx"
                android:text="@string/cloudsliding_username"
                android:textSize="24sp" />



        </RelativeLayout>
        <LinearLayout
            android:id="@+id/mcloud_people_type"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="horizontal">
            <TextView
                android:id="@+id/mcloud_chat"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignLeft="@id/mcloud_name"
                android:layout_below="@+id/mcloud_name"
                android:text="“ 大家好，我是陌云”" />



        </LinearLayout>



    </LinearLayout>





    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:background="#01ACED"

        >
        <RelativeLayout
            android:layout_marginTop="20dp"
            android:layout_width="fill_parent"
            android:layout_height="50dp"
            android:id="@+id/R5"
            >
            <ImageView
                android:layout_centerVertical="true"
                android:id="@+id/IV5"
                android:layout_width="32dip"
                android:src="@drawable/photos"
                android:layout_height="32dip"
                android:layout_marginLeft="10dp"/>
            <TextView

                android:layout_toRightOf="@+id/IV5"
                android:textSize="16dp"
                android:textColor="#ffffff"
                android:layout_centerVertical="true"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="我的相册"
                android:layout_marginLeft="20dp"/>

        </RelativeLayout>
        <RelativeLayout
            android:background="@drawable/button_selector"
            android:layout_marginTop="8dp"
            android:layout_width="fill_parent"
            android:layout_height="50dp"
            android:gravity="center_vertical"
            android:orientation="horizontal"
            android:id="@+id/R1"
            android:layout_below="@id/R5">

            <ImageView
                android:layout_centerVertical="true"
                android:id="@+id/IV1"
                android:layout_width="31dip"
                android:src="@drawable/mymessage"
                android:layout_height="31dip"
                android:layout_marginLeft="10dp"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="个人中心"
                android:layout_centerVertical="true"
                android:textColor="#ffffff"
                android:textSize="16dp"
                android:layout_toRightOf="@+id/IV1"
                android:layout_marginLeft="20dp"
                />

        </RelativeLayout>
        <RelativeLayout
            android:background="@drawable/button_selector"
            android:layout_marginTop="8dp"
            android:layout_width="fill_parent"
            android:layout_height="50dp"
            android:gravity="center_vertical"
            android:orientation="horizontal"
            android:id="@+id/R2"
            android:layout_below="@+id/R1">

            <ImageView
                android:layout_centerVertical="true"
                android:layout_width="33dip"
                android:layout_height="33dip"
                android:src="@drawable/gy"
                android:layout_marginLeft="10dp"
                android:id="@+id/IV2"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="关于软件"
                android:layout_centerVertical="true"
                android:textColor="#ffffff"
                android:textSize="16dp"
                android:layout_toRightOf="@+id/IV2"
                android:layout_marginLeft="20dp"
                />
        </RelativeLayout>

        <RelativeLayout
            android:background="@drawable/button_selector"
            android:layout_marginTop="8dp"
            android:layout_width="fill_parent"
            android:layout_height="50dp"
            android:gravity="center_vertical"
            android:orientation="horizontal"
            android:id="@+id/R3"
            android:layout_below="@+id/R2">

            <ImageView
                android:layout_centerVertical="true"
                android:id="@+id/IV3"
                android:layout_width="34dip"
                android:layout_height="34dip"
                android:src="@drawable/sz"
                android:layout_marginLeft="10dp"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="设置"
                android:layout_centerVertical="true"
                android:textColor="#ffffff"
                android:textSize="16dp"
                android:layout_toRightOf="@+id/IV3"
                android:layout_marginLeft="20dp"
                />

        </RelativeLayout>

        <RelativeLayout
            android:background="@drawable/button_selector"
            android:layout_marginTop="8dp"
            android:layout_width="fill_parent"
            android:layout_height="50dp"
            android:gravity="center_vertical"
            android:orientation="horizontal"
            android:id="@+id/R4"
            android:layout_below="@+id/R3">

            <ImageView
                android:layout_centerVertical="true"
                android:id="@+id/IV4"
                android:layout_width="33dip"
                android:layout_height="33dip"
                android:src="@drawable/tcdl"
                android:layout_marginLeft="10dp"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="退出登录"
                android:layout_centerVertical="true"
                android:textColor="#ffffff"
                android:textSize="16dp"
                android:layout_toRightOf="@+id/IV4"
                android:layout_marginLeft="20dp"
                />



        </RelativeLayout>

    </RelativeLayout>


</LinearLayout>