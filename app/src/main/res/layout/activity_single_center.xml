<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.yee.mcloudprojects.activity.SingleCenter"
    android:orientation="vertical"
    android:background="#ffffff">
    >

    <FrameLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="290dp"
        android:background="@drawable/maerdaifu"
        >

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:id="@+id/cloudsea_top"
            android:background="@drawable/mydata"
            android:gravity="center"
            android:layout_alignParentTop="true"
            android:layout_alignParentEnd="true"
            android:layout_alignParentStart="true">
            <ImageButton
                android:layout_weight="1"
                android:id="@+id/backbutton"

                android:layout_width="15dp"
                android:layout_height="50dp"
                android:background="@null"
                android:layout_gravity="bottom"
                android:src="@drawable/back1" />
            <TextView
                android:textColor="@color/btn_fab_white"
                android:id="@+id/text_in"
                android:gravity="center"
                android:layout_weight="9"
                android:layout_height="40dp"
                android:layout_width="wrap_content"
                android:textSize="18sp"
                android:text=""/>
            <TextView
                android:id="@+id/more"
                android:gravity="center"
                android:layout_weight="1"
                android:layout_height="40dp"
                android:layout_width="40dp"
                android:textSize="18sp"
                android:text="更多"
                android:layout_gravity="bottom"
                android:textColor="#ffffff"/>

        </LinearLayout>
        <LinearLayout
            android:layout_marginTop="10dp"

            android:orientation="horizontal"
            android:layout_width="fill_parent"
            android:layout_height="202dp"
            android:layout_gravity="top"
            android:id="@+id/background"
            android:weightSum="1">

            <LinearLayout

                android:layout_width="wrap_content"
                android:layout_height="120dp"
                android:layout_marginLeft="15dip"
                android:layout_marginTop="20dip"
                android:orientation="horizontal"
                android:gravity="center_horizontal"
                >
                <com.example.yee.mcloudprojects.CircleImageView
                    android:layout_marginTop="60dp"
                    android:layout_width="80dp"
                    android:layout_height="80dp"
                    android:src="@drawable/cloudsea_container_history_id_image"
                    android:layout_gravity="center_horizontal|bottom"
                    android:id="@+id/touxiang"
                    />
                <TextView
                    android:layout_marginLeft="20dp"
                    android:layout_gravity="center_vertical"
                    android:id="@+id/hename"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="25dip"

                    android:textSize="20sp"
                    android:text="MCloudProjects"/>
                <ImageView
                    android:layout_marginLeft="25dp"
                    android:layout_width="35dp"
                    android:layout_height="35dp"
                    android:layout_gravity="center_vertical"
                    android:id="@+id/seximageView"

                    />
            </LinearLayout>




        </LinearLayout>
        <!-- 简介 -->
        <LinearLayout
            android:orientation="horizontal"
            android:background="#22000000"
            android:layout_width="fill_parent"
            android:layout_height="30dip"
            android:layout_gravity="bottom">
            <TextView
                android:id="@+id/intor"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="10.0dip"
                android:textColor="#ffffff"
                android:text="个人资料" />

        </LinearLayout>
    </FrameLayout>



    <RelativeLayout
        android:background="@drawable/rel_selector"
        android:layout_width="fill_parent"
        android:layout_height="60dp"
        android:layout_marginLeft="15dip"
        android:layout_marginRight="15dip"
        android:layout_marginTop="16dip"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:id="@+id/L2">
        <ImageView
            android:id="@+id/IV1"
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:src="@drawable/grzh"
            />
        <TextView
            android:layout_alignBottom="@+id/IV1"
            android:textColor="#A0A1A1"
            android:id="@+id/TV1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="账号"
            android:textSize="16dip"
            android:layout_marginLeft="35dip"
            />
        <TextView
            android:layout_alignBottom="@+id/TV1"
            android:id="@+id/zhanghao"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@+id/TV1"
            android:layout_marginLeft="25dp"
            android:text="756392019"
            android:textColor="#333333"
            android:textSize="17sp"
            />
        <ImageView
            android:layout_marginRight="10dp"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:src="@drawable/right"

            android:layout_alignParentRight="true"
            />

    </RelativeLayout>
    <RelativeLayout
        android:background="@drawable/rel_selector"
        android:id="@+id/L3"
        android:layout_width="fill_parent"
        android:layout_height="60dp"
        android:layout_marginLeft="15dip"
        android:layout_marginRight="15dip"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:layout_marginTop="16dp"

        >

        <ImageView
            android:id="@+id/IV2"
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:src="@drawable/qianming"
            />
        <TextView
            android:textColor="#A0A1A1"
            android:id="@+id/TV2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="签名"
            android:textSize="16dip"
            android:layout_alignBottom="@+id/IV2"
            android:layout_marginLeft="35dip"/>
        <TextView
            android:layout_alignBottom="@+id/TV2"
            android:id="@+id/TV3"
            android:layout_width="250dp"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@+id/TV2"
            android:layout_marginLeft="25dp"
            android:text="原来你是我最想留住的幸运，原来我们和爱情曾经"
            android:textColor="#333333"
            android:textSize="17sp"
            android:singleLine="true"
            />

        <ImageView
            android:layout_marginRight="10dp"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:id="@+id/jiantou2"
            android:src="@drawable/right"
            android:layout_alignParentRight="true"

            />
    </RelativeLayout>
    <RelativeLayout
        android:background="@drawable/rel_selector"
        android:id="@+id/L4"
        android:layout_width="fill_parent"
        android:layout_height="60dp"
        android:layout_marginLeft="15dip"
        android:layout_marginRight="15dip"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:layout_marginTop="16dp"

        >
        <ImageView
            android:id="@+id/IV3"
            android:layout_width="27dp"
            android:layout_height="27dp"
            android:src="@drawable/fbdt"
            />
        <TextView
            android:layout_alignBottom="@+id/IV3"
            android:textColor="#A0A1A1"
            android:id="@+id/TV4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="发表动态"
            android:textSize="16dip"
            android:layout_marginLeft="35dip"/>


        <ImageView
            android:layout_marginRight="10dp"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:id="@+id/jiantou3"
            android:src="@drawable/right"
            android:layout_alignParentRight="true"

            />
    </RelativeLayout>


    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">
        <LinearLayout
            android:layout_marginLeft="15dip"
            android:layout_marginRight="15dip"
            android:layout_marginTop="16dip"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:layout_alignParentBottom="true"
            android:orientation="horizontal">
            <Button
                android:id="@+id/bt1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="#ffffff"
                android:text="编辑资料"
                android:textSize="18dip"
                android:textColor="#01ACED"/>




        </LinearLayout>
    </RelativeLayout>
    </LinearLayout>
