<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.yee.mcloudprojects.activity.DengLuJieMian">
    <ImageView
        android:id="@+id/logo"
        android:layout_width="120dp"
        android:layout_height="wrap_content"
        android:layout_above="@+id/ET"
        android:layout_centerHorizontal="true"
        android:layout_marginLeft="80dp"
        android:background="#FAFAFA"
        android:src="@drawable/logo" />

    <ImageView
        android:id="@+id/yh"
        android:layout_width="25dp"
        android:layout_height="25dp"
        android:layout_marginTop="130dp"
        android:src="@drawable/tx" />

    <TextView
        android:id="@+id/TV"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@id/yh"
        android:layout_toRightOf="@id/yh"
        android:text="账号:   "
        android:textSize="16dp"
        android:layout_marginLeft="10dp"/>

    <EditText
        android:id="@+id/ET"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@id/yh"
        android:layout_toRightOf="@+id/TV"
        android:background="#ffffff"
        android:hint="邮箱号/手机号码"
        android:textSize="18dp"
        android:gravity="center"/>

    <View
        android:id="@+id/v1"
        android:layout_width="wrap_content"
        android:layout_height="1dp"
        android:layout_below="@id/yh"
        android:layout_marginBottom="10dp"
        android:layout_marginTop="15dp"
        android:background="#ECECEC" />


    <ImageView
        android:id="@+id/yh1"
        android:layout_width="25dp"
        android:layout_height="25dp"
        android:layout_below="@+id/v1"
        android:src="@drawable/mima"
        android:layout_marginTop="10dp"/>

    <TextView
        android:id="@+id/TV1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@id/yh1"
        android:layout_toRightOf="@id/yh1"
        android:text="密码:   "
        android:textSize="16dp"
        android:layout_marginLeft="10dp"/>

    <EditText
        android:id="@+id/ET1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@id/yh1"
        android:layout_toRightOf="@+id/TV1"
        android:background="#ffffff"
        android:hint="请输入密码   "
        android:textSize="18dp"
        android:gravity="center"
        android:inputType="textPassword"/>

    <View
        android:id="@+id/v2"
        android:layout_width="wrap_content"
        android:layout_height="1dp"
        android:layout_below="@id/yh1"
        android:layout_marginBottom="10dp"
        android:layout_marginTop="15dp"
        android:background="#ECECEC" />

    <CheckBox
        android:id="@+id/cb1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="记住密码"
        android:textColor="#AAAAAA"
        android:layout_below="@id/v2"
        android:layout_marginTop="5dp"
        />
    <CheckBox
        android:id="@+id/cb2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:layout_below="@+id/cb1"
        android:text="自动登录"
        android:textColor="#AAAAAA"
        />
    <Button
        android:id="@+id/button"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/cb2"
        android:text="登录"
        android:textColor="#ffffff"
        android:textSize="23dp"
        android:background="#01ACED"
        android:layout_marginTop="10dp" />

    <TextView
        android:id="@+id/TV3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="忘记密码?"
        android:textSize="18dp"
        android:layout_below="@+id/button"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="20dp"
        android:textColor="#01ACED"
        />

    <TextView
        android:id="@+id/TV4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="注册"
        android:textSize="18dp"
        android:layout_below="@id/button"
        android:layout_marginLeft="270dp"
        android:textColor="#01ACED"
        android:layout_marginTop="20dp"
        />





</RelativeLayout>