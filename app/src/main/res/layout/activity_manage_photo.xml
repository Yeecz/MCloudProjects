<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.example.yee.mcloudprojects.activity.ManagePhotoActivity">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:background="#303F9F">

        <Button
            android:id="@+id/back3"
            android:layout_width="70dp"
            android:layout_height="30dp"
            android:layout_centerVertical="true"
            android:layout_marginLeft="12dp"
            android:background="@drawable/selector_btn_click_bg_color"
            android:drawableLeft="@mipmap/back"
            android:paddingRight="7dp"
            android:text="返回"
            android:textColor="#DFF6FE"
            android:textSize="18sp"
            android:textStyle="italic" />

        <TextView
            android:id="@+id/album_name4"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"
            android:text="管理相册"
            android:gravity="center_horizontal"
            android:singleLine="true"
            android:ellipsize="none"
            android:textColor="#F0FBFF"
            android:textSize="20sp"
            android:textStyle="bold" />

    </RelativeLayout>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:text="点击照片时删除照片"
        android:textSize="18sp"
        android:paddingLeft="10dp"
        android:paddingTop="5dp"></TextView>

    <android.support.v7.widget.RecyclerView
        android:id="@+id/photo_list"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:clipToPadding="false"
        android:paddingRight="0dp" />
</LinearLayout>
