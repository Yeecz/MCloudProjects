<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
   android:id="@+id/L1"
    android:background="#ffffff"
    tools:context="com.example.yee.mcloudprojects.activity.SingleCenter_more5">
    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="?android:attr/actionBarSize"
        android:id="@+id/cloudsea_top"
        android:gravity="center"
        android:background="#01ACED"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentStart="true">
        <ImageButton
            android:layout_weight="1"
            android:id="@+id/backbutton"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:background="@drawable/button_selector"
            android:src="@drawable/back1" />
        <TextView
            android:textColor="@color/btn_fab_white"
            android:id="@+id/text_in"
            android:gravity="center"
            android:layout_weight="9"
            android:layout_height="40dp"
            android:layout_width="wrap_content"
            android:textSize="18sp"
            android:text="个人头像"/>
        <TextView
            android:id="@+id/text_i2"
            android:gravity="center"
            android:layout_weight="1"
            android:layout_height="40dp"
            android:layout_width="40dp"
            android:textSize="18sp"
            />
    </LinearLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#01ACED"
        >

        <com.example.yee.mcloudprojects.CircleImageView
            android:id="@+id/mcloud_tx"
            android:layout_width="150dp"
            android:layout_height="150dp"
         android:layout_centerInParent="true"
            android:adjustViewBounds="false"
            android:background="@drawable/history_id_image"
            android:src="@drawable/cloud_user_sliding"
            android:layout_marginTop="40dp"/>
    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:background="#01ACED">
<RelativeLayout
    android:id="@id/R1"
    android:layout_width="180dp"
    android:layout_height="35dp"
    android:layout_centerInParent="true"
    android:background="@drawable/biankuang_white">
    <TextView
        android:background="@drawable/button_selector"
        android:id="@id/TV1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="立即设置"
        android:textColor="#ffffff"
        android:layout_centerInParent="true"
        android:textSize="18dp"/>
</RelativeLayout>

    </RelativeLayout>




</LinearLayout>
