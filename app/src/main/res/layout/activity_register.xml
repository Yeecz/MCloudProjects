<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.example.yee.mcloudprojects.activity.Register">
    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="?android:attr/actionBarSize"
        android:id="@+id/cloudsea_top"
        android:gravity="center"
        android:background="#01ACED"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentStart="true">
        <ImageButton
            android:background="@drawable/button_selector"
            android:layout_weight="1"
            android:id="@+id/backbutton"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:backgroundTint="@null"
            android:src="@drawable/back1" />
        <TextView
            android:textColor="@color/btn_fab_white"
            android:id="@+id/text_in"
            android:gravity="center"
            android:layout_weight="9"
            android:layout_height="40dp"
            android:layout_width="wrap_content"
            android:textSize="18sp"
            android:text="注册验证"/>
        <TextView
            android:id="@+id/text_i2"
            android:gravity="center"
            android:layout_weight="1"
            android:layout_height="40dp"
            android:layout_width="40dp"
            android:textSize="18sp"
            />



    </LinearLayout>

    <RelativeLayout
        android:background="@drawable/biankuang"
        android:layout_marginTop="20dp"
        android:orientation="vertical"
        android:layout_marginRight="16dp"
        android:layout_marginLeft="16dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">
<TextView
    android:id="@+id/TV1"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:text="手机号码 :"
    android:layout_marginLeft="10dp"
    android:layout_marginTop="50dp"
    android:textSize="16dp"/>

<EditText
    android:id="@+id/ET1"
    android:layout_width="230dp"
    android:layout_height="wrap_content"
    android:layout_alignBottom="@+id/TV1"
    android:layout_toRightOf="@+id/TV1"
    android:layout_marginLeft="10dp"/>

<TextView
    android:id="@+id/TV2"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_marginLeft="10dp"
    android:text="验证码 :"
    android:layout_below="@+id/TV1"
    android:textSize="16dp"
    android:layout_alignRight="@+id/TV1"
    android:layout_marginTop="50dp"/>
<EditText
    android:id="@+id/ET2"
    android:layout_width="150dp"
    android:layout_marginRight="10dp"
    android:layout_height="wrap_content"
    android:layout_alignBottom="@+id/TV2"
    android:layout_toRightOf="@+id/TV2"
    android:layout_marginLeft="10dp"/>
<Button
    android:id="@+id/bt1"
    android:layout_width="wrap_content"
    android:layout_height="40dp"
    android:layout_alignBottom="@+id/ET2"
    android:layout_toRightOf="@+id/ET2"
    android:text="获取验证码"
    android:textSize="16dp"
    android:textColor="#ffffff"
    android:background="#01ACED"/>

<Button
    android:layout_centerHorizontal="true"
    android:id="@+id/bt2"
    android:layout_width="350dp"
    android:layout_height="wrap_content"
    android:layout_below="@+id/bt1"
    android:layout_marginTop="30dp"
    android:text="下一步"
    android:background="#01ACED"
    android:textColor="#ffffff"
    android:textSize="18dp"/>
</RelativeLayout>
    </LinearLayout>
