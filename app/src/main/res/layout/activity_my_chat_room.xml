    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.yee.mcloudprojects.activity.MyChatRoomActivity">

    <android.support.v4.widget.SwipeRefreshLayout
        android:id="@+id/my_chatroom_sr"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ListView
            android:id="@+id/my_chatroom_lv"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:divider="@null"></ListView>

    </android.support.v4.widget.SwipeRefreshLayout>
</RelativeLayout>
