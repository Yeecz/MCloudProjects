<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.example.yee.mcloudprojects.activity.ShowAlbumActivity">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:background="#303F9F">

        <Button
            android:id="@+id/back2"
            android:layout_width="70dp"
            android:layout_height="30dp"
            android:layout_centerVertical="true"
            android:layout_marginLeft="12dp"
            android:background="@drawable/selector_btn_click_bg_color"
            android:drawableLeft="@mipmap/back"
            android:paddingRight="7dp"
            android:text="返回"
            android:textColor="#DFF6FE"
            android:textSize="18sp"
            android:textStyle="italic" />

        <TextView
            android:id="@+id/album_name2"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"
            android:text="相册名称就考虑的家啊扩大口径的v"
            android:gravity="center_horizontal"
            android:singleLine="true"
            android:ellipsize="none"
            android:textColor="#F0FBFF"
            android:textSize="20sp"
            android:textStyle="bold" />

        <ImageView
            android:id="@+id/album_function2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="10dp"
            android:src="@mipmap/dian" />
    </RelativeLayout>

    <android.support.v7.widget.RecyclerView
        android:id="@+id/photo_list"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:clipToPadding="false"
        android:paddingRight="0dp" />

</LinearLayout>
